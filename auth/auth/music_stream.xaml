<Window x:Class="auth.music_stream"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:auth"
        mc:Ignorable="d"
        Title="Melosphere" Height="800" Width="1000" WindowStartupLocation="CenterScreen"
        Background="White"
        Icon="Resources/logo_max.png"
        WindowState="Maximized"> 

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryColorBrush" Color="#de3923" />

        <Style x:Key="LoginButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColorBrush}" />
            <Setter Property="Foreground" Value="White" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Верхняя панель меню -->
            <RowDefinition Height="auto" />
            <!-- Основной контент страницы -->
            <RowDefinition Height="Auto" />
            <!-- Нижняя панель навигации -->
        </Grid.RowDefinitions>
        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden" />
        <Viewbox>
            
        </Viewbox>

    </Grid>
</Window>
